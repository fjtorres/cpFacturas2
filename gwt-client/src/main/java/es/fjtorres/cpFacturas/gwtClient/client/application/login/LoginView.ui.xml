<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui" xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html"
	xmlns:b.gwt="urn:import:org.gwtbootstrap3.client.ui.gwt" xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with type="es.fjtorres.cpFacturas.gwtClient.client.i18n.Messages" field="messages" />
	
	<b:Container>
		<b:Row>
			<b:Column size="MD_6 SM_8" addStyleNames="col-md-offset-3 col-sm-offset-2">
				<b:Form type="HORIZONTAL">
					<b:Panel>
						<b:PanelHeader>
							<b:Heading size="H3" text="LOGIN!!!"/>
						</b:PanelHeader>
						
						<b:PanelBody>
								
								<b:InputGroup addStyleNames="input-login">
									<b:InputGroupAddon icon="USER" />
									<b:TextBox ui:field="txtUsername" placeholder="....." maxLength="100"/>
								</b:InputGroup>
								
								<b:InputGroup addStyleNames="input-login">
									<b:InputGroupAddon icon="LOCK" addStyleNames="password-login"/>
									<b:Input ui:field="txtPassword" type="PASSWORD" placeholder="....." maxLength="100"/>
								</b:InputGroup>
								
						</b:PanelBody>
						
						<b:PanelFooter>
							<b:Button type="SUCCESS" size="SMALL" text="xxxx" ui:field="btnLogin"/>
						</b:PanelFooter>
					</b:Panel>
				</b:Form>
			</b:Column>
		</b:Row>
	</b:Container>

</ui:UiBinder>